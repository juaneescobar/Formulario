<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juanesteban.myapplication.MainActivity"
    android:background="#3a3a49"

     >


<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juanesteban.myapplication.MainActivity"
    android:background="#3a3a49"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:textSize="20sp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login:"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:textColor="#0a0909"
            android:textStyle="italic"/>

        


        <EditText
            android:id="@+id/edt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="@android:integer/config_longAnimTime"
            android:textStyle="italic"
            android:layout_margin="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borde">

        <TextView
            android:id="@+id/Correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="20sp"
            android:textColor="#0a0909"
            android:textStyle="italic"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="@android:integer/config_longAnimTime"
            android:inputType="textPersonName"
            android:text=""
            android:layout_margin="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borde">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="20sp"
            android:textColor="#0a0909"
            android:textStyle="italic"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/edt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="@android:integer/config_longAnimTime"
            android:inputType="textPassword"
            android:text=""
            android:layout_margin="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borde">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="20sp"
            android:textColor="#0a0909"
            android:textStyle="italic"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/edt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="@android:integer/config_longAnimTime"
            android:inputType="textPassword"
            android:text=""
            android:layout_margin="10sp"/>


    </LinearLayout>


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:background="@drawable/borde">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Sexo:"
            android:textColor="#0a0909"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_margin="10sp"/>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbarSize="20sp">



                <RadioButton
                    android:id="@+id/sMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@android:dimen/app_icon_size"
                    android:text="Man"
                    android:onClick="RadioGroup"
                    android:layout_margin="10sp"/>

                <RadioButton
                    android:id="@+id/sFemenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:onClick="RadioGroup"
                    android:layout_margin="10sp"/>



         </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Hobbies:"
            android:textSize="20sp"
            android:textColor="#0a0909"
            android:textStyle="italic"
            android:layout_margin="5sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <CheckBox android:id="@+id/check_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cine"
                    android:onClick="onCheckboxClicked"
                    tools:ignore="OnClick"
                    android:textColor="#0a0909"
                    android:layout_margin="1sp"/>

                <CheckBox android:id="@+id/check_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nadar"
                    android:onClick="onCheckboxClicked"
                    android:textColor="#0a0909"
                    android:layout_margin="1sp"/>

                <CheckBox android:id="@+id/check_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Correr"
                    android:textColor="#0a0909"
                    android:onClick="onCheckboxClicked"
                    android:layout_margin="1sp"/>
                <CheckBox android:id="@+id/check_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leer"
                    android:textColor="#0a0909"
                    android:onClick="onCheckboxClicked"
                    android:layout_margin="1sp"/>

         </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Lugar de Nacimiento:"
            android:textSize="20sp"
            android:textColor="#0a0909"
            android:textStyle="italic"
            android:layout_margin="10sp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/borde"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Fecha de Nacimiento:"
            android:textSize="20sp"
            android:textColor="#0a0909"
            android:textStyle="italic"
            android:layout_margin="10sp"/>

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="calendar"
            android:id="@+id/Fecha_Nacimiento">

        </DatePicker>



    </LinearLayout>

    <Button
        android:id="@+id/bGuardar"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#0932ea"
        android:onClick="OnClickSave"
        android:text="Guardar"
        android:textColor="#ffff"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Texto"
        android:textColor="#0a0909"
        android:background="@drawable/borde"
        android:textSize="20sp"
        android:fontFamily="cursive"
        android:gravity="center"/>




</LinearLayout>

</ScrollView>